// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("PG_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "typegraphql-prisma"
  output   = "./generated/typegraphql"
}

model User {
  id               String    @id @default(uuid())
  firstName        String
  lastName         String
  email            String?   @unique
  /// @TypeGraphQL.omit(output: true)
  password         String?
  phoneNumber      String    @unique
  loginConfirmedAt DateTime?
  points           Int       @default(0)
  orders           Order[]
  addresses        Address[]
  role             Role      @default(USER)
  /// @TypeGraphQL.omit(input: true)
  createdAt        DateTime  @default(now())
  /// @TypeGraphQL.omit(input: true)
  updatedAt        DateTime  @default(now()) @updatedAt
}

model Order {
  id        String      @id @default(uuid())
  status    OrderStatus
  user      User        @relation(fields: [userId], references: [id])
  userId    String
  address   Address     @relation(fields: [addressId], references: [id])
  addressId Int

  service   Service @relation(fields: [serviceId], references: [id])
  serviceId Int

  details   Json     @default("{}")
  /// @TypeGraphQL.omit(input: true)
  createdAt DateTime @default(now())
  /// @TypeGraphQL.omit(input: true)
  updatedAt DateTime @default(now()) @updatedAt
}

model Address {
  id           Int      @id @default(autoincrement())
  city         String
  area         String
  place        String
  placeNumber  String
  phoneNumber  String
  buildingName String
  primary      Boolean
  orders       Order[]
  User         User     @relation(fields: [userId], references: [id])
  userId       String
  /// @TypeGraphQL.omit(input: true)
  createdAt    DateTime @default(now())
  /// @TypeGraphQL.omit(input: true)
  updatedAt    DateTime @default(now()) @updatedAt
}

model Service {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  name_ar   String   @unique
  steps     Step[]
  orders    Order[]
  /// @TypeGraphQL.omit(input: true)
  createdAt DateTime @default(now())
}

model Step {
  id       Int          @id @default(autoincrement())
  name     String?      @unique
  index    Int          @default(1)
  services Service[]
  options  StepOption[]
}

model StepOption {
  id             Int             @id @default(autoincrement())
  name           String          @unique
  name_ar        String          @unique
  description    String?
  description_ar String?
  index          Int             @default(autoincrement())
  type           StepOptionType? @default(SIMPLE_SELECT)
  settings       Json            @default("{}")
  step           Step            @relation(fields: [stepId], references: [id])
  stepId         Int
  children       StepOption[]    @relation("StepOptionToStepOption")
  parent         StepOption?     @relation("StepOptionToStepOption", fields: [parentId], references: [id])
  parentId       Int?
}

enum StepOptionType {
  ICONIC_SELECT
  SIMPLE_SELECT
  NUMBER_SELECT
  DATE_SELECT
  INPUT
  TEXTAREA
  PAYMENT_METHOD
  ADDRESS_MODEL
}

enum Role {
  USER
  MANAGER
  ADMIN
}

enum OrderStatus {
  Completed
  In_progress  @map("In Progress")
}
